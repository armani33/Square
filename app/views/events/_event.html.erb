<div class="event-card" onclick="document.location='<%= event_path(event.id)%>'" style="cursor: pointer;">
  <div class="image-card">
    <% if event.picture? %>
      <%= image_tag event.picture.thumb.url, class: "img-responsive", alt: event.picture, style: 'height: 100%; width: 100%; object-fit: cover';%>
    <% else %>
      <%= image_tag "event-index-default.jpg", alt: "default-image" %>
    <% end %>
  </div>
  <div class="card-bottom">
    <p class="date-time"><%= event.date.strftime("%a, %b %d %Y") %>
    <%= event.date.strftime(" %I : %M %p") %></p>
    <h4 class="title"><%= truncate event.title, length: 40 %></h4>
